{
    "version": 2,
    "builds": [
        {
            "src": "server.js",
            "use": "@vercel/node"
        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "server.js"
        }
    ],
    "env": {
        "PORT": "3000"
    },
    "functions": {
        "server.js": {
            "memory": 1024,
            "maxDuration": 10
        }
    }
} 